{
  "task": "swinir_vqgan_finetune_psnr_x4"
  , "model": "plain"
  , "gpu_ids": [0]
  , "dist": true

  , "scale": 4
  , "n_channels": 3

  , "path": {
    "root": "vqgan"
    , "pretrained_netG": "/home/pedro/code/KAIR/model_zoo/swinir/003_realSR_BSRGAN_DFO_s64w8_SwinIR-M_x4_GAN.pth"
    , "pretrained_netG_params": "params_ema"
    , "pretrained_netE": null
  }

  , "datasets": {
    "train": {
      "name": "train_dataset"
      , "dataset_type": "sr"
      , "dataroot_H": "/data/vqgan/inputs"
      , "dataroot_L": "/data/vqgan/decoded"
      , "H_size": 256                   // patch_size 256 | 288 | 320.
      , "shuffle_prob": 0.1
      , "use_sharp": true

      , "dataloader_shuffle": true
      , "dataloader_num_workers": 12
      , "dataloader_batch_size": 16      // batch size 1 | 16 | 32 | 48 | 64 | 128. Total batch size =4x8=32 in SwinIR
    }
    , "test": {
      "name": "test_dataset"
      , "dataset_type": "plain"
      , "dataroot_H": "/data/vqgan/test-inputs"
      , "dataroot_L": "/data/vqgan/test-decoded"

    }
  }

  , "netG": {
    "net_type": "swinir"
    , "upscale": 4
    , "in_chans": 3
    , "img_size": 64
    , "window_size": 8
    , "img_range": 1.0
    , "depths": [6, 6, 6, 6, 6, 6]
    , "embed_dim": 180
    , "num_heads": [6, 6, 6, 6, 6, 6]
    , "mlp_ratio": 2
    , "upsampler": "nearest+conv"
    , "resi_connection": "1conv"

    , "init_type": "default"
  }

  , "train": {
    "G_lossfn_type": "l1"
    , "G_lossfn_weight": 1.0

    , "E_decay": 0.999

    , "G_optimizer_type": "adam"
    , "G_optimizer_lr": 5e-5               // I'm using half of the original training lr, further halved because I reduced the batch size
    , "G_optimizer_wd": 0
    , "G_optimizer_clipgrad": null
    , "G_optimizer_reuse": true

    , "total_steps": 400000               // Smaller than the paper, testing
    , "G_scheduler_type": "MultiStepLR"
    , "G_scheduler_milestones": [100000, 200000, 300000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null
    , "G_regularizer_clipstep": null

    , "G_param_strict": true
    , "E_param_strict": true

    , "checkpoint_test": 500000000			// Disabled. L and H images need to have the same dimensions
    , "checkpoint_save": 5000
    , "checkpoint_print": 200
    , "checkpoint_log": 1
  }

  , "wandb": {
    "entity": "dalle-mini"
    , "project": "sr"
    , "tags": ["swin", "x4", "vqgan"]
    , "save_code": false
  }
}
